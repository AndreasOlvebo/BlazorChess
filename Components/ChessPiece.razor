@using Models
@if (Piece is not null && !string.IsNullOrEmpty(Piece.ImagePath))
{
    <img class="text-center piece @(Piece.Tagged ? "tagged" : "")" src="@(Piece.ImagePath)" />
}
else
{
    @(Piece?.PieceColor)<br />
    @(Piece?.Name)
} 
@code {
    [Parameter]
    public Piece Piece { get; set; }
}
